generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Hook {
  id Int @id @default(autoincrement())

  title       String
  description String
  creator     String
  website     String
  github      String

  status String @default("pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id String @id @unique

  title       String
  description String
  category    String
  emoji       String
  count       Int     @default(0)
  tag         String?

  hooks Hook[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resource {
  id              Int      @id @default(autoincrement())

  title           String
  section         String
  description      String   @db.Text

  status String @default("pending")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}