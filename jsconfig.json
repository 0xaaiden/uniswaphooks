{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@component/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx",
    "src/components/NewHookForm.jsx",
    "src/lib/utils.ts"
  ],
  "exclude": ["node_modules"]
}
