{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@component/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["src/utils/*"],
      "@lib/*": ["src/lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/dashboard/layout.jsx",
    "src/components/dashboard/components/EditAction.tsx",
    "app/tools/page.jsx"
  ],
  "exclude": ["node_modules"]
}
